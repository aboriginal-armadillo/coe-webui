rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Match any document in the collection 'users', where the document ID
    // is equal to the ID of the currently authenticated user.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // All other documents will not be accessible without proper rules.
    // You can add additional rules here for other collections or documents as needed.
  }
}
